<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:id="@+id/history_summary"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="25"
        android:background="@drawable/background_with_shadow"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="33"
            android:background="@drawable/circle"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distance"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:layout_marginBottom="1dp"
                android:textSize="16sp"
                android:layout_above="@+id/fs_distance"/>
            <TextView
                android:id="@+id/fs_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="40sp"
                android:textColor="@color/white"
                android:layout_centerInParent="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="km"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:layout_marginTop="5dp"
                android:textSize="17sp"
                android:layout_below="@+id/fs_distance"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="33"
            android:background="@drawable/circle"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Avg. HR"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:layout_marginBottom="1dp"
                android:textSize="16sp"
                android:layout_above="@+id/fs_hr"/>
            <TextView
                android:id="@+id/fs_hr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="40sp"
                android:textColor="@color/white"
                android:layout_centerInParent="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="bpm"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:layout_marginTop="5dp"
                android:textSize="20sp"
                android:layout_below="@+id/fs_hr"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="33"
            android:background="@drawable/circle"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calorie"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:layout_marginBottom="1dp"
                android:textSize="16sp"
                android:layout_above="@+id/fs_calorie"/>
            <TextView
                android:id="@+id/fs_calorie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="40sp"
                android:textColor="@color/white"
                android:layout_centerInParent="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kcal"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:layout_marginTop="5dp"
                android:textSize="20sp"
                android:layout_below="@+id/fs_calorie"/>
        </RelativeLayout>
    </LinearLayout>
    <ListView
        android:id="@+id/statistics_list_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="75"
        android:layout_marginTop="3dp"
        android:choiceMode="singleChoice"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="0.3dip"
        android:listSelector="@android:color/transparent"
        android:cacheColorHint="@android:color/transparent">
    </ListView>
</LinearLayout>