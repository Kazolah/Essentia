<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="@drawable/main_background">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/btnWelcomeSignIn"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:text="@string/main_sign_in"
            android:textColor="@android:color/white"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="81dp"
            android:textSize="@dimen/button_text_size"
            android:background="#e1f47239"
            android:onClick="initSignIn"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnWelcomeRegister"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:text="@string/main_register"
            android:layout_alignLeft="@+id/btnWelcomeSignIn"
            android:layout_alignStart="@+id/btnWelcomeSignIn"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:background="#db646464"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="@dimen/button_text_size"
            android:onClick="initRegister"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/essentia_logo"
            android:layout_centerHorizontal="true"
            android:contentDescription="essentia_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Your Personal Fitness Monitor!"
            android:id="@+id/textView"
            android:layout_marginBottom="32dp"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:layout_above="@+id/btnWelcomeSignIn"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</LinearLayout>
