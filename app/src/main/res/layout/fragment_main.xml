<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.essentia.main.MainActivity$PlaceholderFragment"
    android:background="@android:color/white">

    <ListView
        android:id="@+id/workout_setup_listview"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:choiceMode="singleChoice"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="0.5dip"
        android:listSelector="@android:color/transparent"
        android:cacheColorHint="@android:color/transparent">
    </ListView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnMainStart"
        android:layout_marginBottom="120dp"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/imgBtnAudioFeedback"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/voice_feedback_off"
            android:background="@android:color/transparent" />
        <ImageButton
            android:id="@+id/imgBtnAutoPause"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/hrm_con_off" />
        <ImageButton
            android:id="@+id/imgBtnHRMCon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/auto_pause_off"
            android:background="@android:color/transparent" />
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/action_start"
        android:id="@+id/btnMainStart"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#e1f47239"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="@dimen/button_text_size"
        android:onClick="startWorkoutSession"/>

</RelativeLayout>
